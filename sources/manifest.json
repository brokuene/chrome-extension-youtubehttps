{
  "name": "Youtube https-er",
  "description": "Changes all embeded videos to go via https protocol.",
  "version": "1.0",
  "permissions": [
    "activeTab", "http://*/*", "tabs",  "webRequest", "webRequestBlocking"
  ],
  "background": {
    "scripts": ["youtubereplacer.js", "background.js"],
    "persistent": true
  },
  "page_action": {
	"default_icon": "yotubereplacer_48.png",
    "default_title": "Change youtube protocol to https",
	"default_popup": "popup.html"
  },
  "icons": { 
	"16": "yotubereplacer_16.png",
    "48": "yotubereplacer_48.png",
    "128": "yotubereplacer_128.png" 
   },
  "options_page": "options.html",
  "manifest_version": 2
}